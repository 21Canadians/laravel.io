{
    "name": "laravelio/laravelio",
    "description": "The source code for the Laravel.IO community portal.",
    "license": "MIT",
    "require": {
        "laravel/framework": "4.2.*",
        "artdarek/oauth-4-laravel": "1.0.*",
        "barryvdh/laravel-debugbar": "1.8.*",
        "mccool/laravel-auto-presenter": "2.2.*",
        "mccool/database-backup": "1.0.*",
        "michelf/php-markdown": "1.4.*",
        "nickcernis/html-to-markdown": "2.1.*",
        "misd/linkify": "1.1.*",
        "hashids/hashids": "1.0.*",
        "mews/purifier": "1.0.*",
        "bugsnag/bugsnag-laravel": "1.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3.*",
        "mockery/mockery": "0.9.*"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/database/migrations",
            "app/database/seeds"
        ],
        "psr-0": {
            "Lio\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lio\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
